//refa√ßa o codigo acrescentando area de um triangulo

#include <iostream>
#include <cmath>

int main()
{
    float lado, area, dobro;
    std::cout << "Digite o lado do quadrado: ";
    std::cin >> lado;
    area = pow(lado, 2);
    dobro = area * 2;
    std::cout << "O dobro da area do quadrado de lado " << lado << " eh " << dobro;
    return 0;
}
